<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">description_form.description_form_data_source</item>
            <item name="deps" xsi:type="string">description_form.description_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Product description info</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">description_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button class="Learning\AdditionalDescription\Ui\Component\Control\AdditionalDescription\BackButton" name="back"/>
            <button name="reset">
                <class>reset</class>
                <label translate="true">Reset</label>
            </button>
            <button class="Learning\AdditionalDescription\Ui\Component\Control\AdditionalDescription\SaveButton" name="save"/>
            <button class="Learning\AdditionalDescription\Ui\Component\Control\AdditionalDescription\DeleteButton" name="delete"/>
        </buttons>
    </settings>
    <dataSource name="description_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Learning\AdditionalDescription\Model\AdditionalDescription\DataProvider</argument>
            <argument name="name" xsi:type="string">description_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="description_details">
        <settings>
            <label translate="true">Description Details</label>
        </settings>

        <field formElement="hidden" name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">AdditionalDescription</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Id</label>
                <dataScope>id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="customer_email">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">AdditionalDescription</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label>Customer email</label>
                <dataScope>customer_email</dataScope>
                <disabled>true</disabled>
            </settings>
        </field>
        <field formElement="input" name="product_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">AdditionalDescription</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Product ID</label>
                <dataScope>product_id</dataScope>
                <disabled>true</disabled>
            </settings>
        </field>
        <field formElement="textarea" name="additional_description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">AdditionalDescription</item>
                    <item name="rows" xsi:type="number">10</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Additional description</label>
                <dataScope>additional_description</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
