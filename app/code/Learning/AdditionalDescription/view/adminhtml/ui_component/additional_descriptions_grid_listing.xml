<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">additional_descriptions_grid_listing.additional_descriptions_grid_listing_data_source</item>
            <item name="deps" xsi:type="string">additional_descriptions_grid_listing.additional_descriptions_grid_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">additional_descriptions_grid_listing_columns</item>
    </argument>
    <dataSource name="additional_descriptions_grid_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Learning\AdditionalDescription\Ui\DataProvider\Product\DataProvider</argument>
            <argument name="name" xsi:type="string">additional_descriptions_grid_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">description_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="cacheRequests" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
