    <fieldset name="general">
        <settings>
            <label>General</label>
        </settings>
        <field formElement="input" name="name" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Blog</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Subject</label>
                <dataScope>subject</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="name_ua" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
