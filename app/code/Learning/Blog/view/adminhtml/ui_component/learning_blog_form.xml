<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">learning_blog_listing.blog_form_data_source</item>
        </item>
        <item name="label" translate="true" xsi:type="string">General Information</item>
<!--        <item name="template" xsi:type="string">templates/form/collapsible</item>-->
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="*/*/index"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="reset">
                <class>reset</class>
                <label translate="true">Reset</label>
            </button>
<!--            <button class="Tsg\Directory\Ui\Component\Control\City\SplitSaveButton" name="save"/>-->
<!--            <button class="Tsg\Directory\Ui\Component\Control\City\SplitSaveButton" name="save"/>-->
            <button name="save"/>
            <button name="delete"/>
        </buttons>
        <namespace>learning_blog_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>learning_blog_form.blog_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="blog_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
<!--        <dataProvider class="Tsg\Directory\Model\City\DataProvider" name="blog_form_data_source">-->
<!--        <dataProvider name="blog_form_data_source">-->
        <dataProvider name="blog_form_data_source">
            <settings>
                <requestFieldName>blog_id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

